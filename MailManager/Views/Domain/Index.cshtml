@model List<Policy>
@if (Model.Count > 1)
{
    ViewData["Title"] = "Domänen";
}
else
{
    ViewData["Title"] = "Domäne";
}
<div class="container">
    <div class="row">
        <div class="col-md-3 pull-left">
            <h2>@ViewData["Title"] <span class="badge">@Model.Count</span></h2>
        </div>
        <div class="col-md-1 pull-right">
            <h2><a href="/Domain/Create"><span class="glyphicon glyphicon-plus pull-right" aria-hidden="true" title="neue Domäne anlegen"></span></a></h2>
        </div>
    </div>
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="row">
            <div class="col-md-6">
                @{
                    var domain = Model[i];
                }
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-6 pull-left">
                                <b>Dom&auml;ne: <i class="text-primary">@domain.Domainname</i></b>
                            </div>
                            <div class="col-md-1 pull-right">
                                <a href="/Domain/Edit?name=@domain.Domainname"><i class="fa fa-edit fa-lg text-primary" aria-hidden="true" title="Domäne bearbeiten"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="input-group">
                            <span class="input-group-addon"><b>Richtlinie:&nbsp;</b></span>
                            <input type="text" class="form-control" value="@domain.Policyrule">
                        </div>
                        <br />
                        <div class="input-group">
                            <span class="input-group-addon"><b>Parameter:</b></span>
                            <input type="text" class="form-control" value="@domain.Params">
                        </div>
                    </div>
                </div>
            </div>
            @if (++i < Model.Count)
            {
                <div class="col-md-6">
                    @{
                        domain = Model[i];
                    }
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-md-6 pull-left">
                                    <b>Dom&auml;ne: <i class="text-primary">@domain.Domainname</i></b>
                                </div>
                                <div class="col-md-1 pull-right">
                                    <a href="/Domain/Edit?name=@domain.Domainname"><i class="fa fa-edit fa-lg text-primary" aria-hidden="true" title="Domäne bearbeiten"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div class="input-group">
                                <span class="input-group-addon"><b>Richtlinie:&nbsp;</b></span>
                                <input type="text" class="form-control" value="@domain.Policyrule">
                            </div>
                            <br />
                            <div class="input-group">
                                <span class="input-group-addon"><b>Parameter:</b></span>
                                <input type="text" class="form-control" value="@domain.Params">
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
