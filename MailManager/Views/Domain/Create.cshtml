@model DomainViewModel
@{
    ViewData["Title"] = "Domäne erstellen";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="input-group form-group">
                <span class="input-group-addon"><b>Neue Dom&auml;ne:</b></span>
                <input asp-for="@Model.Domainname" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Erstellen</button>
                &nbsp;&nbsp;
                <a asp-controller="Domain" asp-action="Index" class="btn btn-danger">Abbrechen</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <p>
            Zum Erstellen einer Dom&auml;ne bitte den neuen Dom&auml;nennamen eingeben und dann auf &quot;Erstellen&quot; dr&uuml;cken.
            Es wird nur der Eintrag in der Datenbank angelegt.
            Das Verzeichnis für die EMail Dateien wird nicht erstellt.
        </p>
    </div>
</div>
@if (null != Model && Model.ShowMessage)
{
    <div class="row">
        <div class="col-md-4">
            <p class="alert-danger">@Model.Message</p>
        </div>
    </div>
}