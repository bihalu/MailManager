@model Policy
@{
    ViewData["Title"] = "Domäne ändern";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Dom&auml;ne: <i class="text-primary">@Model.Domainname</i></b>
            </div>
            <div class="panel-body">
                <form method="post">
                    <input asp-for="@Model.Id" hidden />
                    <input asp-for="@Model.Domainname" hidden />
                    <div class="input-group form-group">
                        <span class="input-group-addon"><b>Richtlinie:&nbsp;</b></span>
                        <select asp-for="@Model.Policyrule" class="form-control">
                            <option>secure</option>
                            <option>verify</option>
                            <option>fingerprint</option>
                            <option>dane-only</option>
                            <option>dane</option>
                            <option>encrypt</option>
                            <option>may</option>
                            <option>none</option>
                        </select>
                    </div>
                    <div class="input-group form-group">
                        <span class="input-group-addon"><b>Parameter:</b></span>
                        <input asp-for="@Model.Params" class="form-control" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Speichern</button>
                        &nbsp;&nbsp;
                        <a asp-controller="domain" asp-action="index" class="btn btn-danger">Abbrechen</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <p>Hier kannst Du die Richtlinie und die Parameter der Dom&auml;ne &auml;ndern</p>
    </div>
</div>



