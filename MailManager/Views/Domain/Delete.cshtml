@model DomainViewModel
@{
    ViewData["Title"] = "Domäne löschen";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <h4>Dom&auml;ne: <i class="text-primary">@Model.Domainname</i></h4>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input asp-for="@Model.Id" hidden />
            <input asp-for="@Model.Domainname" hidden />
            <input asp-for="@Model.UserCount" hidden />
            <div class="input-group form-group">
                <span class="input-group-addon"><b>best&auml;tigen:</b></span>
                <input asp-for="@Model.ConfirmDelete" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">L&ouml;schen</button>
                &nbsp;&nbsp;
                <a asp-controller="Domain" asp-action="Index" class="btn btn-danger">Abbrechen</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <p>
            Zum L&ouml;schen der Dom&auml;ne bitte den Dom&auml;nen Namen nochmals best&auml;tigen und dann auf &quot;L&ouml;schen&quot; dr&uuml;cken.
            Es wird nur der Eintrag in der Datenbank gel&ouml;scht. 
            Die EMail Dateien in dem Verzeichnis bleiben bestehen.
            Bitte vorher eine Sicherung durchf&uuml;hren.
        </p>
    </div>
</div>
@if (null != Model && Model.ShowMessage)
{
    <div class="row">
        <div class="col-md-4">
            <p class="alert-danger">@Model.Message</p>
        </div>
    </div>
}