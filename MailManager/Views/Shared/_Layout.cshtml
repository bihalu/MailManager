<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mail Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand"><i class="fa fa-envelope-o fa-lg" aria-hidden="true"></i> Mail Manager</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Domain" asp-action="Index"><i class="fa fa-home fa-lg" aria-hidden="true"></i> Dom&auml;ne</a></li>
                    <li><a asp-controller="Account" asp-action="Index"><i class="fa fa-users fa-lg" aria-hidden="true"></i> Benutzer</a></li>
                    <li><a asp-controller="Alias" asp-action="Index"><i class="fa fa-address-card-o fa-lg" aria-hidden="true"></i> Alias</a></li>
                    <li><a asp-controller="Home" asp-action="About"><i class="fa fa-info fa-lg" aria-hidden="true"></i> Info</a></li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><a asp-controller="Account" asp-action="Info"><i class="fa fa-user-circle-o fa-lg" aria-hidden="true"></i> @User.Identity.Name</a></li>
                        <li><a asp-controller="Account" asp-action="Logout"><i class="fa fa-sign-out fa-lg" aria-hidden="true"></i> Abmelden</a></li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><a asp-controller="Account" asp-action="Login"><i class="fa fa-sign-in fa-lg" aria-hidden="true"></i> Anmelden</a></li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - hansi<i class="fa fa-at fa-lg" aria-hidden="true"></i>bihalu.de</p>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
