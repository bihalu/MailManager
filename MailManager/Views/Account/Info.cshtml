@{
    ViewData["Title"] = "Benutzer Info";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Name: <i class="text-primary">@User.Identity.Name</i></b>
                <a class="pull-right" href="/Account/ResetPassword?name=@User.Identity.Name"><i class="fa fa-key fa-lg" aria-hidden="true" title="Kennwort ändern"></i></a>
            </div>
            <div class="panel-body">
                <b>
                    Rolle:
                    @if (User.IsInRole("Admin"))
                    {
                        <i class="text-primary">Administrator</i>
                    }
                    else
                    {
                        <i class="text-primary">Benutzer</i>
                    }
                </b>
            </div>
        </div>
    </div>
</div>