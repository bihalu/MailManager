@model LoginViewModel
@{
    ViewData["Title"] = "Kennwort zurücksetzen";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-4">
            <h4>Benutzer: <i class="text-primary">@Model.Username</i></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <input asp-for="@Model.Id" hidden />
                <input asp-for="@Model.Username" hidden />
                <div class="input-group form-group">
                    <span class="input-group-addon"><b>Kennwort:&nbsp;&nbsp;&nbsp;&nbsp;</b></span>
                    <input asp-for="@Model.Password" class="form-control" type="password" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" onclick="showHidePassword('Password')"><i class="fa fa-eye" title="Kennwort anzeigen"></i></button>
                    </span>
                </div>
                <div class="input-group form-group">
                    <span class="input-group-addon"><b>wiederholen:</b></span>
                    <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" onclick="showHidePassword('ConfirmPassword')"><i class="fa fa-eye" title="Kennwort anzeigen"></i></button>
                    </span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Speichern</button>
                    &nbsp;&nbsp;
                    <a asp-controller="Account" asp-action="Index" class="btn btn-primary">Abbrechen</a>
                </div>
            </form>
        </div>
    </div>
    @if (null != Model && Model.ShowMessage)
    {
        <div class="row">
            <div class="col-md-4">
                <p class="alert-danger">@Model.Message</p>
            </div>
        </div>
    }
</div>